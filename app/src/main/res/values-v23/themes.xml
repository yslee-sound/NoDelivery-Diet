<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- API 23+ 전용: 상태바 아이콘을 어둡게 표시하여 흰 배경 위에서도 가독성 확보 -->
    <style name="Theme.AlcoholicTimer" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Splash와 동일 배경으로 전환 깜빡임 제거 -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!-- 상단 경계선(오버레이) 제거 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.AlcoholicTimer.Splash" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <!-- 윈도우 배경 자체에 아이콘을 그려 표시 보장 -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_app_icon</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.AlcoholicTimer</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="splashScreenIconSize">240dp</item>
        <!-- 상단 경계선(오버레이) 제거 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 매니페스트에서 사용하는 테마 명칭과 일치하도록 동일한 오버라이드 추가 -->
    <style name="Theme.NoDeliveryDiet" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.NoDeliveryDiet.Splash" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_app_icon</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.NoDeliveryDiet</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="splashScreenIconSize">240dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
